@page
@model Library.Pages.Books.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удлалить книгу</h1>

<h3>Вы уверены, что хотите удалить запись?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.BookTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.BookTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.PubYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.PubYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Gen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Gen.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Pub)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Pub.Address)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Book.BookId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Назад к списку</a>
    </form>
</div>
