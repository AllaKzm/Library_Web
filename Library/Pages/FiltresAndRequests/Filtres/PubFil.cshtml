@page
@model Library.Pages.FiltresAndRequests.Filtres.PubFilModel
@{
}
<h1>@Model.Publisher.PublicistTitle</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].BookTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Gen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Book)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookTitle)
                </td>
                <td>
                    @try
                    {
                        @Model.Genre.First(r => r.GenId == item.GenId).GenTitle
                    }
                    catch
                    {
                        @Html.DisplayFor(modelItem => item.Gen.GenTitle)
                    }
                </td>
            </tr>
        }
    </tbody>
</table>