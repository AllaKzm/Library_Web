@page
@model Library.Pages.Genres.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить запись</h1>

<h4>Жанр</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Genre.GenId" class="control-label"></label>
                <input asp-for="Genre.GenId" class="form-control" />
                <span asp-validation-for="Genre.GenId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre.GenTitle" class="control-label"></label>
                <input asp-for="Genre.GenTitle" class="form-control" />
                <span asp-validation-for="Genre.GenTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre.Description" class="control-label"></label>
                <input asp-for="Genre.Description" class="form-control" />
                <span asp-validation-for="Genre.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить запись" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
