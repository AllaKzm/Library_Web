@page
@model Library.Pages.IssuedBooks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Выданные книги</h1>

<p>
    <a asp-page="Create">Добавить запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IssuedBook[0].IssueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssuedBook[0].ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssuedBook[0].ReturnMark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssuedBook[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssuedBook[0].Emp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssuedBook[0].Read)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.IssuedBook) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IssueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnMark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Read.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IssueId">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.IssueId">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.IssueId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
