@page
@model Library.Pages.Positions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать запись</h1>

<h4>Должность</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Position.PositionId" />
            <div class="form-group">
                <label asp-for="Position.PositionTitle" class="control-label"></label>
                <input asp-for="Position.PositionTitle" class="form-control" />
                <span asp-validation-for="Position.PositionTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.Salary" class="control-label"></label>
                <input asp-for="Position.Salary" class="form-control" />
                <span asp-validation-for="Position.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.Duties" class="control-label"></label>
                <input asp-for="Position.Duties" class="form-control" />
                <span asp-validation-for="Position.Duties" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.Demands" class="control-label"></label>
                <input asp-for="Position.Demands" class="form-control" />
                <span asp-validation-for="Position.Demands" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
