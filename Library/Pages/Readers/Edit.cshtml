@page
@model Library.Pages.Readers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать запись</h1>

<h4>Читатель</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reader.ReadId" />
            <div class="form-group">
                <label asp-for="Reader.Name" class="control-label"></label>
                <input asp-for="Reader.Name" class="form-control" />
                <span asp-validation-for="Reader.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.BirthDate" class="control-label"></label>
                <input asp-for="Reader.BirthDate" class="form-control" />
                <span asp-validation-for="Reader.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.Gender" class="control-label"></label>
                <input asp-for="Reader.Gender" class="form-control" />
                <span asp-validation-for="Reader.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.Address" class="control-label"></label>
                <input asp-for="Reader.Address" class="form-control" />
                <span asp-validation-for="Reader.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.Phone" class="control-label"></label>
                <input asp-for="Reader.Phone" class="form-control" />
                <span asp-validation-for="Reader.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reader.PassportData" class="control-label"></label>
                <input asp-for="Reader.PassportData" class="form-control" />
                <span asp-validation-for="Reader.PassportData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
