@page
@model Library.Pages.Readers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Читатели</h1>

<p>
    <a asp-page="Create">Добавить запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reader[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reader[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reader[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reader[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reader[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reader[0].PassportData)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reader) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassportData)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ReadId">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.ReadId">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.ReadId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
